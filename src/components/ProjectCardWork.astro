---
import type { Project } from '@/data'

import * as fmt from '@/lib/format'

import HorizontalCard from './HorizontalCard.astro'

interface Props {
  slug: string
  project: Project
}

const { slug, project } = Astro.props
---

<HorizontalCard
  title={`${project.title}, ${project.customer}`}
  icon={project.icon}
  desc={`${fmt.fromTo(project)}, ${project.role}`}
  url={`/projects/${slug}`}
  target="_self"
/>
