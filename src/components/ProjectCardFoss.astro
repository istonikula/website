---
import type { Foss } from '@/data'

import HorizontalCard from './HorizontalCard.astro'

interface Props {
  project: Foss
}

const { project } = Astro.props
const badges = project.url.includes('github') ? ['GitHub'] : undefined
---

<HorizontalCard
  title={project.title}
  desc={project.description}
  url={project.url}
  badges={badges}
  tags={project.tags}
  tagUrl="/projects"
/>
