---
import type { Foss } from '@/data'

import HorizontalCard from './HorizontalCard.astro'

interface Props {
  project: Foss
}

const { project } = Astro.props
const badge = project.url.includes('github') ? 'GitHub' : ''
---

<HorizontalCard
  title={project.title}
  desc={project.description}
  url={project.url}
  badge={badge}
  tags={project.tags}
  tagUrl="/projects"
/>
