---
import { Image } from 'astro:assets'

interface Props {
  title: string
  img?: string
  desc: string
  url: string
  badge?: string
  tags?: string[]
  tagUrl?: string
  target?: string
}

const { title, img, desc, url, badge, tags, target = '_blank' } = Astro.props
const tag_url = Astro.props.tagUrl || '/tag'
---

<div class="rounded-lg bg-base-100 transition ease-in-out hover:scale-[102%] hover:shadow-xl">
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="hidden max-w-full rounded-lg md:block md:max-w-[13rem]"
          />
        )
      }
      <div class="w-full grow">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="text-1xl py-1">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <a href={`${tag_url}/${tag}`} class="badge badge-outline">
                  {tag}
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
